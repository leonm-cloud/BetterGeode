{
    "name": "BetterGeode",
    "description": "Customize the Geode Panel even more!",
    "version": "1",
    "manifest_version": 3,
    "author": "saboor",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "activeTab",
      "declarativeContent"
    ],
    "action": {
      "default_title": "BetterGeode",
      "default_popup": "index.html",
      "default_icon": {
        "16": "images/16.png",
        "32": "images/32.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png"
    }
}
